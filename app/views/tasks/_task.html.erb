<tr class='task' data-task-id="<%= task.id %>" id="<%= dom_id task %>">
  <td>
    <%= turbo_frame_tag dom_id(task, :edit) do %>
      <%= link_to edit_task_path(task) do %>
        <span><%= task.content %></span>
      <% end %>
    <% end %>
  </td>
  <td>
    <%= turbo_frame_tag dom_id(task, :completed) do %>
      <%= link_to_if task.completed?, 'âœ”', [task, { task: { status: 'active' }}], method: 'patch' do %>
        <%= link_to 'ğŸ—†', [task, { task: { status: 'completed' }}], method: 'patch' %>
      <% end %>
    <% end %>
  </td>
